apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: pg-database
  namespace: argocd
spec:
  destination:
    namespace: pg
    server: https://kubernetes.default.svc
  source:
    repoURL: https://github.com/pankajthakur888/cloudnative-pg.git
    targetRevision: HEAD
    path: pg  # âœ… Use the folder containing all manifests, not a single file
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
